{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PacketLens",
  "version": "0.1.0",
  "identifier": "com.packetlens.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PacketLens",
        "width": 800,
        "height": 600,
        "maximized": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "resources": [
      "../sidecar/proxy_service.py",
      "../sidecar/dist/packetlens-sidecar.exe"
    ],
    "icon": [
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller",
        "silent": true
      }
    }
  }
}
